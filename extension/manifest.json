{
  "manifest_version": 2,
  "name": "IMDB Torrent Search",
  "short_name": "IMDB-Search",
  "description": "Automatically display the most popular torrents on IMDB pages",
  "version": "1.0.0",
  "offline_enabled": false,
  "content_scripts": [
    {
      "matches": [
        "http://www.imdb.com/title/*"
      ],
      "css": [
        "build/content.css"
      ],
      "js": [
        "build/content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/logo-16x16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/logo-16x16.png",
    "48": "img/logo-48x48.png",
    "128": "img/logo-128x128.png"
  },
  "permissions": [
    "storage",
    "https://yts.ag/api/*",
    "https://fonts.googleapis.com/*"
  ],
  "web_accessible_resources": [
    "img/icon-16.png",
    "img/icon-magnet.gif",
    "img/1337x-favicon.png",
    "img/extratorrent-favicon.png",
    "img/torrents-favicon.png",
    "img/rargb-favicon.png",
    "img/tpb-favicon.png"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' https://fonts.googleapis.com"
}
